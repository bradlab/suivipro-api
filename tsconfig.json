{
  "compilerOptions": {
    "module": "commonjs",
    "declaration": true,
    "removeComments": true,
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "allowSyntheticDefaultImports": true,
    "target": "ES2021",
    "sourceMap": true,
    "outDir": "./dist",
    "baseUrl": "./",
    "incremental": true,
    "skipLibCheck": true,
    "strictNullChecks": true,
    "forceConsistentCasingInFileNames": true,
    "noImplicitAny": false,
    "strictBindCallApply": false,
    "noFallthroughCasesInSwitch": false,
    "paths": {
      "config/*": ["src/_shared/config/*"],
      "domain": ["./src/_shared/domain"],
      "domain/*": ["./src/_shared/domain/*"],
      "app": ["./src/_shared/app"],
      "app/*": ["./src/_shared/app/*"],
      "adapter": ["./src/_shared/adapter"],
      "adapter/*": ["./src/_shared/adapter/*"],
      "framework": ["./src/_shared/framework"],
      "framework/*": ["./src/_shared/framework/*"],
      "util": ["./src/_shared/util"],
      "util/*": ["./src/_shared/util/*"],
      "rh": ["./src/rh"],
      "rh/*": ["./src/rh/*"],
      "admin": ["./src/admin"],
      "admin/*": ["./src/admin/*"],
      "market": ["./src/market"],
      "market/*": ["./src/market/*"]
    }
  }
}
